<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center_vertical"
				android:focusable="true"
				android:focusableInTouchMode="true">

			    <com.rinekri.widget.SharegramEditText
			        android:id="@+id/instagram_id"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:hint="@string/hint_for_users"
			        android:inputType="text"
			        />
			    <com.rinekri.widget.SharegramButton 
		    		xmlns:app="http://schemas.android.com/apk/res/com.rinekri.collagetion"
			        android:id="@+id/search_post_button"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/search_button_text"
		    		app:fontCustom="roboto_medium"
			         />
			</LinearLayout>

	<include 
		   android:id="@+id/fragment_share_toolbar"
		   layout="@layout/toolbar_layout"
		   android:layout_width="match_parent"
		   android:layout_height="wrap_content"
		   android:layout_gravity="top"
	/>
    
</FrameLayout>
